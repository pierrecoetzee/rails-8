<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Projects</h1>
    <p class="text-gray-600">Manage your projects</p>

    <div class="flex justify-end">
      <%= link_to 'Create a project', new_project_path,
                  class: 'bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700',
                  method: :get %>
    </div>
  </div>

  <% if @projects.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @projects.each do |project| %>
        <% stats = @project_stats[project.id] %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-bold mb-2"><%= project.name %></h2>
          <p class="text-gray-600 mb-4"><%= truncate(project.description, length: 150) %></p>

          <!-- Task Statistics -->
          <div class="mb-4 space-y-2">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Progress:</span>
              <span class="text-sm font-semibold text-blue-600"><%= stats[:task_completion_percentage] %>%</span>
            </div>

            <!-- Progress Bar -->
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: <%= stats[:task_completion_percentage] %>%"></div>
            </div>

            <div class="grid grid-cols-2 gap-2 text-xs">
              <div class="text-center">
                <div class="font-semibold text-gray-900"><%= stats[:tasks_count] %></div>
                <div class="text-gray-500">Total Tasks</div>
              </div>
              <div class="text-center">
                <div class="font-semibold text-green-600"><%= stats[:completed_tasks_count] %></div>
                <div class="text-gray-500">Completed</div>
              </div>
            </div>

            <div class="text-center">
              <div class="font-semibold text-yellow-600"><%= stats[:pending_tasks_count] %></div>
              <div class="text-gray-500 text-xs">Pending</div>
            </div>
          </div>

          <%= link_to 'View Project', project_path(project),
                      class: 'inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 w-full text-center mb-2' %>

          <%= link_to 'New Task', new_project_task_path(project),
                      class: 'inline-block bg-yellow-500 text-white px-4 py-2 rounded hover:bg-green-700 w-full text-center' %>
          <%if project.tasks.any? && project.tasks.completed.any? %>
          <%= link_to 'All Task', project_tasks_path(project),
                      class: 'inline-block bg-purple-500 text-white px-4 py-2 rounded hover:bg-green-700 w-full text-center' %>
          <%end%>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">No projects yet. Create your first project!</p>
      <%= link_to 'Create Project', new_project_path,
                  class: 'inline-block mt-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700' %>
    </div>
  <% end %>
</div>