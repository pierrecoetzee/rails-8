<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white shadow-lg rounded-lg p-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Edit Task</h1>
      <div class="flex gap-2">
        <%= link_to "View Task", task_path(@task),
                    class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "All Tasks", tasks_path,
                    class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <!-- Display validation errors -->
    <% if @task.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @task.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Task Edit Form -->
    <%= form_with(model: @task, local: true, class: "space-y-6") do |form| %>

      <!-- Title Field -->
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title,
                            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{@task.errors[:title].any? ? 'border-red-500' : ''}",
                            placeholder: "Enter task title" %>
        <% if @task.errors[:title].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @task.errors[:title].first %></p>
        <% end %>
      </div>

      <!-- Description Field -->
      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description,
                           rows: 4,
                           class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{@task.errors[:description].any? ? 'border-red-500' : ''}",
                           placeholder: "Describe the task in detail..." %>
        <% if @task.errors[:description].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @task.errors[:description].first %></p>
        <% end %>
      </div>

      <!-- Status and Priority Row -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <!-- Status Field -->
        <div>
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :status,
                          options_for_select(Task.statuses.map { |key, value| [key.humanize, key] }, @task.status),
                          { prompt: "Select status" },
                          { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{@task.errors[:status].any? ? 'border-red-500' : ''}" } %>
          <% if @task.errors[:status].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @task.errors[:status].first %></p>
          <% end %>
        </div>

        <!-- Priority Field -->
        <div>
          <%= form.label :priority, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :priority,
                          options_for_select(Task.priorities.map { |key, value| [key.humanize, key] }, @task.priority),
                          { prompt: "Select priority" },
                          { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{@task.errors[:priority].any? ? 'border-red-500' : ''}" } %>
          <% if @task.errors[:priority].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @task.errors[:priority].first %></p>
          <% end %>
        </div>
      </div>

      <!-- Due Date Field -->
      <div>
        <%= form.label :due_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.datetime_local_field :due_date,
                                      value: (@task.due_date&.strftime("%Y-%m-%dT%H:%M")),
                                      class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{@task.errors[:due_date].any? ? 'border-red-500' : ''}" %>
        <% if @task.errors[:due_date].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @task.errors[:due_date].first %></p>
        <% end %>
        <p class="mt-1 text-sm text-gray-500">Optional: Set a due date and time for this task</p>
      </div>

      <!-- Project Association Field -->
      <div>
        <%= form.label :project_ids, "Projects", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.collection_check_boxes :project_ids, Current.user.projects, :id, :name do |b| %>
          <div class="flex items-center mb-2">
            <%= b.check_box(class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded") %>
            <%= b.label(class: "ml-2 block text-sm text-gray-900") %>
          </div>
        <% end %>
        <p class="mt-1 text-sm text-gray-500">Select which projects this task belongs to (optional)</p>
      </div>

      <!-- Current Task Info (for reference) -->
      <div class="bg-gray-50 rounded-lg p-4">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Current Task Information</h3>
        <div class="grid grid-cols-2 gap-4 text-sm">
          <div>
            <span class="text-gray-500">Created:</span>
            <span class="text-gray-900"><%= @task.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </div>
          <div>
            <span class="text-gray-500">Last Updated:</span>
            <span class="text-gray-900"><%= @task.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </div>
          <div>
            <span class="text-gray-500">Current Status:</span>
            <span class="px-2 py-1 text-xs font-semibold rounded-full
                       <%= case @task.status
                           when 'pending' then 'bg-yellow-100 text-yellow-800'
                           when 'in_progress' then 'bg-blue-100 text-blue-800'
                           when 'completed' then 'bg-green-100 text-green-800'
                           when 'cancelled' then 'bg-red-100 text-red-800'
                           end %>">
              <%= @task.status.humanize %>
            </span>
          </div>
          <div>
            <span class="text-gray-500">Current Priority:</span>
            <span class="px-2 py-1 text-xs font-semibold rounded-full
                       <%= case @task.priority
                           when 'low' then 'bg-gray-100 text-gray-800'
                           when 'medium' then 'bg-yellow-100 text-yellow-800'
                           when 'high' then 'bg-orange-100 text-orange-800'
                           when 'urgent' then 'bg-red-100 text-red-800'
                           end %>">
              <%= @task.priority.humanize %>
            </span>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex justify-between items-center pt-6 border-t border-gray-200">
        <div class="flex gap-3">
          <%= form.submit "Update Task",
                          class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded focus:outline-none focus:shadow-outline" %>
          <%= link_to "Cancel", task_path(@task),
                      class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-6 rounded" %>
        </div>

        <div class="text-right">
          <%= link_to "Delete Task", task_path(@task),
                      method: :delete,
                      data: {
                        confirm: "Are you sure you want to delete this task? This action cannot be undone.",
                        turbo_method: :delete
                      },
                      class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded text-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>